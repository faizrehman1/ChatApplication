<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_messages"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <TextView
        android:id="@+id/timeView_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TimeView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBottom="@+id/imageView_messages"
        android:layout_alignParentRight="true"
        android:textColor="#000"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <TextView
        android:id="@+id/messageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message_View"
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/timeView_messages"
        android:layout_toEndOf="@+id/imageView_messages" />
</RelativeLayout>