<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/timeView_messages"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/imageView_messages"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView_messages"
        android:layout_marginLeft="40dp"
        android:background="#2222"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
                android:gravity="left|center"
        android:maxLength="12"
        android:minWidth="140dp"
        android:paddingLeft="40dp"
        android:paddingRight="8dp"
        android:text="Date"/>




    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="40dp"
        android:autoLink="web"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/imageView_messages"
        android:layout_toEndOf="@+id/imageView_messages">


    </LinearLayout>

    <TextView
        android:id="@+id/messageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="40dp"
        android:visibility="visible"
        android:background="#f98fc1"
        android:autoLink="web"
        android:minWidth="300dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="#000"
        android:layout_below="@+id/timeView_messages"
        android:layout_alignStart="@+id/rootLayout" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_messages"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/timeView_messages"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:border_color="#fff"
        app:border_width="2dp"/>


</RelativeLayout>