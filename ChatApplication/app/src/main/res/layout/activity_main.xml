<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:fillViewport="true"
    tools:context=".ui.LoginActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mainlogo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="Chat-App"
                android:textColor="#fff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/friends" />

                <EditText
                    android:id="@+id/edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:padding="12dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/keymain" />

                <EditText
                    android:id="@+id/edt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textSize="16dp" />
            </LinearLayout>


            <Button
                android:id="@+id/but1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#03363B"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/Login"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/fb"
                android:id="@+id/button_SignIn_CustomFb"
                android:backgroundTint="#000"
                android:layout_width="70dp"
                android:layout_height="70dp"
               />
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/g_logo"
                    android:id="@+id/button_SignIn_CustomGoogle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/register"
                android:textAllCaps="true"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
