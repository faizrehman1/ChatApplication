<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".ui.Conversation_Activity">


        <ListView
            android:id="@+id/messagesListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText_Conversation_message"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:transcriptMode="alwaysScroll"/>



    <EditText
        android:id="@+id/editText_Conversation_message"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:autoText="true"
        android:hint="type message"
        android:layout_toStartOf="@+id/button_Conversation_send" />

    <Button
        android:id="@+id/button_Conversation_send"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/ic_menu_send"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/attach_container"
        android:id="@+id/cover"
        android:layout_above="@+id/editText_Conversation_message"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/attach_container"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/floatingActionButton2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doc_btn"
            android:layout_alignTop="@+id/floatingActionButton2"
            android:layout_toStartOf="@+id/floatingActionButton2"
            android:layout_marginEnd="59dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gallery_btn"
            android:layout_marginStart="58dp"
            android:layout_alignTop="@+id/floatingActionButton2"
            android:layout_toEndOf="@+id/floatingActionButton2" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"


            android:id="@+id/floatingActionButton5"
            android:layout_alignTop="@+id/floatingActionButton6"
            android:layout_alignStart="@+id/gallery_btn" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/floatingActionButton6"
            android:layout_alignTop="@+id/floatingActionButton4"
            android:layout_alignEnd="@+id/camera" />

        <TextView
            android:text="Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera"
            android:layout_alignBaseline="@+id/doc"
            android:layout_alignBottom="@+id/doc"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gallery"
            android:layout_alignBaseline="@+id/camera"
            android:layout_alignBottom="@+id/camera"
            android:layout_alignStart="@+id/gallery_btn" />

        <TextView
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/audio"
            android:layout_toEndOf="@+id/doc_btn"
            android:id="@+id/locat" />

        <TextView
            android:text="Documents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doc"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/doc_btn"
            android:layout_toStartOf="@+id/camera"
            android:layout_marginEnd="33dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:id="@+id/floatingActionButton4"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/doc"
            android:layout_alignStart="@+id/doc_btn" />

        <TextView
            android:text="Audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/audio"
            android:layout_below="@+id/floatingActionButton4"
            android:layout_alignEnd="@+id/floatingActionButton4" />

        <TextView
            android:text="Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact"
            android:layout_alignBaseline="@+id/locat"
            android:layout_alignBottom="@+id/locat"
            android:layout_alignStart="@+id/floatingActionButton5" />


    </RelativeLayout>
</RelativeLayout>
