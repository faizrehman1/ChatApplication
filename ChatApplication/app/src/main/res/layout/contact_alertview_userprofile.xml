<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:padding="12dp"
              android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_userprofile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal" >
        </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/textViewName_alert_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_userprofile"
        android:layout_alignStart="@+id/imageView_userprofile"
        android:layout_below="@+id/imageView_userprofile"
        android:text="New Text"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView_alert_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_userprofile"
        android:layout_alignStart="@+id/imageView_userprofile"
        android:layout_below="@+id/textViewName_alert_Name"
        android:text="New Text"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView_alert_Dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_alert_Email"
        android:layout_alignStart="@+id/textView_alert_Email"
        android:layout_below="@+id/textView_alert_Email"
        android:text="New Text"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/button_Cancel_alertBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView_alert_Dob"
            android:layout_toEndOf="@+id/button_Message_alertBox"
            android:layout_toRightOf="@+id/button_Message_alertBox"
            android:text="Cancel"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/button_Message_alertBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView_alert_Dob"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView_alert_Dob"
            android:layout_alignTop="@+id/button_Cancel_alertBox"
            android:text="Message"/>
    </LinearLayout>


</LinearLayout>