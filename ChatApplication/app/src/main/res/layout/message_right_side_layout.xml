<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView_messages"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/timeView_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"

        android:text="TimeView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/messageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/messageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="messageView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"

        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView_messages"

        android:layout_alignBottom="@+id/imageView_messages" />

</RelativeLayout>