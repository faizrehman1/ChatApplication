<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

    <EditText
        android:id="@+id/edtviewFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="First Name"

        />

    <EditText
        android:id="@+id/edtviewLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtviewFirstName"
        android:hint="Last Name"/>


    <EditText
        android:id="@+id/edtviewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtviewLastName"
        android:hint="Email"/>

    <EditText
        android:id="@+id/edtviewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtviewEmail"
        android:hint="Password"
        android:password="true">

    </EditText>




    <EditText
        android:id="@+id/editTextDob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtviewPassword"
        android:ems="10"
        android:hint="Date/Month/Year"
        android:inputType="date"/>

    <!--<EditText-->
        <!--android:id="@+id/editGender"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/editTextDob"-->
        <!--android:hint="Gender: Male Or Female"-->
        <!--/>-->

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editGender"
        android:hint="Gender"

        android:layout_below="@+id/editTextDob"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:id="@+id/BtnuploadImage"

        android:layout_below="@+id/editGender"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/image_Name"
        android:layout_below="@+id/BtnuploadImage"
        android:layout_centerHorizontal="true" />


</RelativeLayout>