<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/groupImage"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Admin Name"
        android:id="@+id/groupAdminName"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/groupNamealert"
        android:layout_alignRight="@+id/groupNamealert"
        android:layout_alignEnd="@+id/groupNamealert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"

        android:text="Group Name"
        android:id="@+id/groupNamealert"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/groupImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="61dp" />


</RelativeLayout>